<local:WarningLevelConfig xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:local="clr-namespace:ToDoMainWindow.Helpers;assembly=TodoMainWindow">
    <local:WarningLevelConfig.DefaultBrush>
        <local:WarningLevelBrush Content="Normal" Background="#CCE2F7D7" Foreground="Black" />
    </local:WarningLevelConfig.DefaultBrush>

    <local:WarningLevelBrush Content="Late" Hours="0" Background="#7FFFD4D4" Foreground="Red" />
    <local:WarningLevelBrush Content="Almost late" Hours="2" Background="#7FF9F3C9" Foreground="Orange" />
    <local:WarningLevelBrush Content="Upcoming" Hours="24" Background="#7FDCD4FF" Foreground="Blue" />
</local:WarningLevelConfig>